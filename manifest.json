{
    "manifest_version": 3,
    "name": "BiblicalOrNot",
    "version": "1.0",
    "description": "Click a tweet to check if it's biblical using Perplexity AI.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://twitter.com/*",
        "*://x.com/*",
        "*://substack.com/*",
        "*://*.substack.com/*",
        "https://api.perplexity.ai/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://twitter.com/*",
                "*://x.com/*",
                "*://substack.com/*",
                "*://*.substack.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}